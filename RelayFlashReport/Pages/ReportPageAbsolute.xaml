<?xml version="1.0" encoding="UTF-8"?>
<ContentPage	xmlns="http://xamarin.com/schemas/2014/forms"
							xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
							x:Class="RelayFlashReport.ReportPageAbsolute">
	<ContentPage.Content>
		<AbsoluteLayout BackgroundColor="#FF8080">
			<Label x:Name="LabelTotalTime"
				Text="テスト" 
				FontAttributes="Bold"
				FontSize="30"
				AbsoluteLayout.LayoutFlags="PositionProportional"
				AbsoluteLayout.LayoutBounds="0.5, 0.05, AutoSize, AutoSize"/>

			<Label x:Name="LabelCurrentRunnderTime" Text="テスト2" BackgroundColor="Blue" HorizontalOptions="Center" FontSize="24"
			AbsoluteLayout.LayoutFlags="PositionProportional"
				AbsoluteLayout.LayoutBounds="0.5, 0.1, AutoSize, AutoSize"/>

		</AbsoluteLayout>
	</ContentPage.Content>
</ContentPage>
